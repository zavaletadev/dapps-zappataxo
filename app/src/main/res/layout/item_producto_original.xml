<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:onClick="clickDetalleOriginal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#ffffff"
        android:padding="10dp"
        android:layout_margin="10dp"
        android:elevation="10dp"
        android:weightSum="12">

        <ImageView
            android:id="@+id/iv_img1"
            android:layout_width="1dp"
            android:layout_weight="3"
            android:layout_height="match_parent"
            android:src="@drawable/tennis1"
            android:scaleType="centerInside"/>

        <LinearLayout
        android:layout_width="1dp"
        android:layout_weight="9"
        android:layout_height="wrap_content"
        android:orientation="vertical">

            <TextView
                android:id="@+id/tv_producto_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="{{producto_id}}"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/tv_nombre_prod"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="{{nombre_prod}}"
                android:paddingStart="10dp"
                android:paddingVertical="10dp"
                android:textStyle="bold"
                android:textSize="18sp"/>

            <TextView
                android:id="@+id/tv_precio_prod"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="${{precio_prod}} MXN"
                android:paddingStart="10dp"
                android:paddingVertical="10dp"
                android:fontFamily="monospace"
                android:textStyle="bold"
                android:textColor="@color/colorPrimaryLight"
                android:textSize="20sp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:weightSum="12"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <TextView
                    android:id="@+id/tv_num_tallas"
                    android:layout_width="2dp"
                    android:layout_weight="9"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorLightText"
                    android:fontFamily="sans-serif"
                    android:textSize="18sp"
                    android:text="{{tallas.length}} tallas disponibles"
                    android:layout_marginStart="10dp"
                    android:layout_marginVertical="10dp"/>

                <LinearLayout
                    android:layout_width="1dp"
                    android:layout_weight="3"
                    android:weightSum="12"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/iv_cat_mujer"
                        android:layout_width="1dp"
                        android:layout_weight="6"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_woman"
                        />

                    <ImageView
                        android:id="@+id/iv_cat_hombre"
                        android:layout_width="1dp"
                        android:layout_weight="6"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_man" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>