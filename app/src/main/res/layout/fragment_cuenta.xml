<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.cuenta.CuentaFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="En esta sección aparecerá un formulario para visualizar y modificar los datos personales de la cuenta del usuario."
            android:textSize="20sp"
            android:layout_marginTop="50dp"
            android:layout_marginHorizontal="10dp"/>

        <Button
            android:id="@+id/btn_modal_cambia_pass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_marginVertical="20dp"
            android:text="Actualizar contraseña" />

    </LinearLayout>

</androidx.core.widget.NestedScrollView>