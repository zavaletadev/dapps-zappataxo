<?xml version="1.0" encoding="utf-8"?>
<androidx.swiperefreshlayout.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.catalogo.CatalogoFragment"
    android:id="@+id/srl_listaperso_local">

    <!--
    Si decidimos utilizar un Listview con un diseño personalizado
    Antes de programar el ListView debemos diseñar
    el layout para cada elemento
    -->
    <ListView
        android:id="@+id/lv_listaperso_local"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@android:color/transparent"/>

</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>